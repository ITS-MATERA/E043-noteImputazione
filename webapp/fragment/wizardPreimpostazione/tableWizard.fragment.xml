<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:u="sap.ui.unified"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:menu="sap.m.MenuItem"
    xmlns:menBtn="sap.m.Menu"
    height="100%">




    <Table class="sapUiSizeCompact" id="HeaderNIW" includeItemInSelection="true" items="{wizardEntitiesModel>/RendicontazioneSet}" mode="MultiSelect" visible="true">
        <columns>
            <Column width="auto" hAlign="Left">
                <Label text="Codice ISIN" />
            </Column>
            <Column width="25%" hAlign="Left">
                <Label text="Sottotipologia primo livello " />
            </Column>
            <Column width="auto" hAlign="Left">
                <Label text="Data Pagamento" />
            </Column>
            <Column width="auto" hAlign="Right">
                <Label text="Importo Titolo" />
            </Column>
            <Column width="auto" hAlign="Right">
                <Label text="Importo Associato" />
            </Column>
            <Column width="auto" hAlign="Right">
                <Label text="Importo Residuo" />
            </Column>
        </columns>
        <ColumnListItem>
            <Text text="{wizardEntitiesModel>ZcodIsin}" />
            <Text text="{wizardEntitiesModel>Ztipo}"/>
            <Text text="{path: 'wizardEntitiesModel>ZdataPag',
                        parts:[
                            {path: 'wizardEntitiesModel>ZdataPag'}
                        ],
                        formatter:'.formatter.convert'
                        }"  
            />  

            <Text text="{path: 'wizardEntitiesModel>ZimpoTitolo',
                        parts:[
                            {path: 'wizardEntitiesModel>ZimpoTitolo'}
                        ],
                        formatter:'.formatter.convertFormattedNumber'
                        }" />

            <Text text="{path: 'wizardEntitiesModel>ZimpoAss',
                        parts:[
                            {path: 'wizardEntitiesModel>ZimpoAss'}
                        ],
                        formatter:'.formatter.convertFormattedNumber'
                        }" />   
            <Text text="{path: 'wizardEntitiesModel>ZimpoRes',
                        parts:[
                            {path: 'wizardEntitiesModel>ZimpoRes'}
                        ],
                        formatter:'.formatter.convertFormattedNumber'
                        }" />                       
        </ColumnListItem>
    </Table>
</core:FragmentDefinition>