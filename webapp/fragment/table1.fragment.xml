<core:FragmentDefinition
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:u="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:menu="sap.m.MenuItem"
	xmlns:menBtn="sap.m.Menu"
	height="100%"
>
	<!-- mode="SingleSelectLeft" 
    itemPress="onRowSelectionChange"-->
	<Table
		class="sapUiSizeCompact"
		id="HeaderNI"
		includeItemInSelection="true"
		items="{HeaderNI>/}"
		mode="SingleSelectLeft"
		selectionChange="onRowSelectionChange"
		growing="true"
	>
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<ToolbarSpacer/>
					<Button
						icon="sap-icon://search"
						id="DettagliNI"
						press="navToDettagliNI"
						type="Emphasized"
						text="Dettaglio NI"
						enabled="false"
					/>
					<Button
						icon="sap-icon://excel-attachment"
						id="Esporta"
						press="onExport"
						type="Emphasized"
						text="Esporta"
						enabled="false"
					/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column
				demandPopin="true"
				hAlign="Left"
			>
				<Label text="Progressivo NI "/>
			</Column>
			<Column
				demandPopin="true"
				hAlign="Left"
			>
				<Label text="Struttura Amministrativa Responsabile"/>
			</Column>
			<Column
				demandPopin="true"
				hAlign="Left"
			>
				<Label text="Posizione Finanziaria"/>
			</Column>
			<Column
				demandPopin="true"
				hAlign="Left"
			>
				<Label text="Oggetto della spesa"/>
			</Column>
			<Column
				demandPopin="true"
				hAlign="Left"
			>
				<Label text="Mese"/>
			</Column>
			<Column
				demandPopin="true"
				hAlign="Left"
			>
				<Label text="Stato NI"/>
			</Column>
			<Column
				demandPopin="true"
				hAlign="Right"
			>
				<Label text="Importo Totale NI"/>
			</Column>
		</columns>
		<ColumnListItem type="Active">
			<Text text="{HeaderNI>ZchiaveNi}"/>
			<Text text="{HeaderNI>Fistl}"/>
			<Text text="{HeaderNI>Fipex}"/>
			<Text text="{HeaderNI>ZoggSpesa}"/>
			<Text
				text="{
					path: 'HeaderNI>Zmese',
					formatter: '.formatter.getMonthName'
				}"
				wrapping="false"
			/>
			<Text text="{HeaderNI>ZcodiStatoniDesc}"/>
			<Text text="{
				path: 'HeaderNI>ZimpoTotni',
				formatter: '.formatter.convertFormattedNumber'
			}"/>
		</ColumnListItem>
	</Table>
</core:FragmentDefinition>