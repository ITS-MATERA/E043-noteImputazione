<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    height="100%">
    <Table id="idRettificaNI" inset="false" showSeparators="Inner"
        items="{
                path: 'EntityModel>/HeaderNIM'
        }">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Dettaglio NI" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column demandPopin="true" hAlign="Left">
                <Label text="Struttura Amministrativa Responsabile" />
            </Column>
            <Column demandPopin="true" hAlign="Left">
                <Label text="Posizione Finanziaria" />
            </Column>
            <Column demandPopin="true" hAlign="Left">
                <Label text="Oggetto della spesa" />
            </Column>
            <Column demandPopin="true" hAlign="Left">
                <Label text="Mese" />
            </Column>
        </columns>
        <ColumnListItem>
            <Text text="{EntityModel>Fistl}" />
            <Text text="{EntityModel>Fipex}" />
            <Input value="{EntityModel>ZoggSpesa}" id="oggSpesaInput"/>
            <Text text="{path: 'EntityModel>Zmese', formatter:'.formatter.getMonthName'}" />
        </ColumnListItem>
    </Table>
</core:FragmentDefinition>