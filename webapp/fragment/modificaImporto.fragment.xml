<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    height="100%">
    
    <Table class="sapUiSizeCompact" id="PositionNIMI" includeItemInSelection="true" 
        items="{
                path: 'EntityModel>/PositionNIMI'
            }"
        visible="true">
        <columns>
            <Column width="auto" hAlign="Left">
                <Label text="Codice ISIN" />
            </Column>
            <Column width="25%" hAlign="Left">
                <Label text="Sottotipologia primo livello " />
            </Column>
            <Column width="auto" hAlign="Left">
                <Label text="Descrizione" />
            </Column>
            <Column width="auto" hAlign="Left">
                <Label text="Data Pagamento" />
            </Column>
            <Column width="auto" hAlign="Right">
                <Label text="Importo NI" />
            </Column>
            <Column width="auto" hAlign="Right">
                <Label text="Importo Residuo" />
            </Column>
        </columns>
        <ColumnListItem>
            <Text text="{EntityModel>ZcodIsin}" />
            <Text text="{EntityModel>Ztipo}"/>
            <Text text="{EntityModel>Zdescrizione}" />
            <Text text="{path: 'EntityModel>ZdataPag', formatter:'.formatter.convert'}" />
            <Input id="modificaImportoInput" type="Number" value="{EntityModel>ZimpoTitolo}" />
            <Text text="{path:'EntityModel>ZimpoRes', formatter:'.formatter.convertFormattedNumber'}" />
        </ColumnListItem>
    </Table>

</core:FragmentDefinition>