<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:zcontrolPosFin="zsap.com.r3.cobi.s4.custposfin.z_s4_zposfinlink.controls"  
    xmlns:zcontrollinkSar="custlinksar.custlinksar.controls" 
    height="100%" controllerName="project1.controller.conferma">
    <f:DynamicPage id="dynamicPageId" showFooter="true">
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                
                <layout:Grid defaultSpan="XL12 L12 M12 S12" vSpacing="0">
                  <!-- 1 riga -->
                    <HBox>
                        <Label id="numNI" text="{i18n>ProgressivoNI}:" design="Bold" class="lbl-header-margin-right" wrapping="true"/>
                        <Label id="numNI1" text="{EntityModel>/Header/ZchiaveNi}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M12 S12" />
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Label id="dataReg" text="{i18n>DataRegistrazioneNI}:" design="Bold" class="lbl-header-margin-right" wrapping="true"/>
                        <Label id="dataReg1" text="{path:'EntityModel>/Header/ZdataCreaz', formatter:'.formatter.convert'}"  wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M12 S12" />
                        </layoutData>
                    </HBox>
                  <!-- 2 riga -->
                    <FlexBox class="text-overflow">
                        <Label id="SARW2" text="{i18n>SAR}:" design="Bold" class="lbl-header-margin-right" wrapping="true"/>
                        <zcontrollinkSar:LinkSar id="linkSarBilancio" anno="{EntityModel>/Header/Esercizio}" eos="E" fikrs="S001" fase="GEST" SEM_OBJ="" reale="R" 
                            versione="D" bilancio="" fictr="{EntityModel>/Header/Fistl}" datbis="99991231" text="{EntityModel>/Header/Fistl}"
                            wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M12 S12" linebreak="true" />
                        </layoutData>
                    </FlexBox>                        
                    <FlexBox class="text-overflow">
                        <Label id="pos_FinW2" text="{i18n>PF}:" design="Bold" class="lbl-header-margin-right" wrapping="true"/>
                        <zcontrolPosFin:LinkPosizioneFinanziaria id="linkPosFinSpesa" anno="{EntityModel>/Header/Esercizio}" eos="S" fikrs="S001" fase="GEST" reale="R" 
                            versione="D" fipex="{EntityModel>/Header/Fipex}" datbis="99991231" text="{EntityModel>/Header/Fipex}" semanticObject="ESAMINAMODIFICA"
                            wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M12 S12" />
                        </layoutData>
                    </FlexBox>
                    <HBox>
                        <Label id="oggSpesa" text="{i18n>oggSpesa}:" design="Bold" class="lbl-header-margin-right" wrapping="true"/>
                        <Label id="oggSpesa1" text="{EntityModel>/Header/ZoggSpesa}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M12 S12" />
                        </layoutData>
                    </HBox>
                    <!-- 3 riga -->
                    <HBox>
                        <Label id="mese" text="{i18n>Mese}:" design="Bold" class="lbl-header-margin-right" wrapping="true"/>
                        <Label id="mese1" text="{path: 'EntityModel>/Header/Zmese', formatter:'.formatter.getMonthName'}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M12 S12" linebreak="true" />
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Label id="comp" text="{i18n>comp}:" design="Bold" class="lbl-header-margin-right" wrapping="true"/>
                        <Label id="comp1" wrapping="true"
                             text="{= ${EntityModel>/Header/ZcompRes} === 'C' ? 'Competenza' : ${EntityModel>/Header/ZcompRes} === 'R' ? 'Residui' : ''}"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M12 S12" />
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Label id="statoNI" text="{i18n>statoNI}:" design="Bold" class="lbl-header-margin-right" wrapping="true"/>
                        <Label id="statoNI1" text="{EntityModel>/Header/ZcodiStatoniDesc}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M12 S12" />
                        </layoutData>
                    </HBox>  
                    <HBox>
                        <Label id="importoTot" text="{i18n>importoTot}:" design="Bold" class="lbl-header-margin-right" wrapping="true"/>
                        <Label id="importoTot1" text="{path: 'EntityModel>/Header/ZimpoTotni', formatter:'.formatter.convertFormattedNumber'}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M12 S12" linebreak="true"/>
                        </layoutData>
                    </HBox>
                    <!-- 4 riga -->
                    <HBox>
                        <Label id="Lifnr" text="{i18n>Lifnr}:" design="Bold" class="lbl-header-margin-right"/>
                        <Label id="Lifnr1" text="{EntityModel>/Header/Lifnr}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" linebreak="true"/>
                        </layoutData>
                    </HBox>
                    <HBox>  
                        <Label id="Nome" text="{i18n>Nome}:" design="Bold" class="lbl-header-margin-right"/>
                        <Label id="Nome1" text="{EntityModel>/Header/LifnrDesc}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" />
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Label id="Zwels" text="{i18n>Zwels}:" design="Bold" class="lbl-header-margin-right"/>
                        <Label id="Zwels1" text="{EntityModel>/Header/ModalitaPagamento}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" />
                        </layoutData>
                    </HBox>
                    <!-- 5 riga -->
                    <HBox>
                        <Label id="CentroCosto" text="Centro di Costo: " design="Bold" class="lbl-header-margin-right"/>
                        <Label id="CentroCosto1" text="{EntityModel>/Header/Cdc}"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" linebreak="true"/>
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Label id="ConCoGe" text="Conto Co.Ge.: " design="Bold" class="lbl-header-margin-right"/>
                        <Label id="ConCoGe1" text="{EntityModel>/Header/Coge}"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" />
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Label id="ImpLiq" text="Importo Liquidazione:" design="Bold" class="lbl-header-margin-right"/>
                        <Label id="ImpLiq1"  text="{path: 'EntityModel>/Header/ZimpoTotni', formatter:'.formatter.convertFormattedNumber'}"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" />
                        </layoutData>
                    </HBox>
                    <!-- 6 riga -->
                    <HBox>
                        <Label id="CodiceGes" text="{i18n>Zcodgest}:" design="Bold" class="lbl-header-margin-right"/>
                        <Label id="CodiceGes1" text="{EntityModel>/Header/CodiceGestionale}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" linebreak="true"/>
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Label id="CausalePagamento" text="{i18n>Zcauspag}:" design="Bold" class="lbl-header-margin-right"/>
                        <Label id="CausalePagamento1" text="{EntityModel>/Header/CausalePagamento}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" />
                        </layoutData>
                    </HBox>
                    <!-- 7 riga -->
                    <HBox>
                        <Label id="CodiceUff" text="Codice Ufficio:" design="Bold" class="lbl-header-margin-right"/>
                        <Label id="CodiceUff1" text="{EntityModel>/Header/CodiceUfficio}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" linebreak="true"/>
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Label id="Dirigente" text="Dirigente/DirettoreFirmatario:" design="Bold" class="lbl-header-margin-right"/>
                        <Label id="Dirigente1" text="{EntityModel>/Header/Dirigente}" wrapping="true"/>
                        <layoutData>
                            <layout:GridData span="XL3 L3 M6 S12" />
                        </layoutData>
                    </HBox>    
                </layout:Grid>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <IconTabBar id="confermaITB" class="sapUiResponsiveContentPadding" select="onSelect">
                <items>
                    <IconTabFilter icon="sap-icon://detail-view" text="Dettaglio NI" key="ListaDettagli">
                        <core:Fragment fragmentName="project1.fragment.conferma" type="XML" />
                    </IconTabFilter>
                    <IconTabFilter icon="sap-icon://history" text="Workflow" key="Workflow">
                        <core:Fragment fragmentName="project1.fragment.workflow" type="XML" />
                    </IconTabFilter>
                    <IconTabFilter icon="sap-icon://documents" text="Fascicolo" key="Fascicolo">
                    </IconTabFilter>
                </items>
            </IconTabBar>

        </f:content>
        <f:footer>
            <OverflowToolbar>
                <Button text="Indietro" type="Emphasized" press="onBackButton" />
                <ToolbarSpacer />
                <Button type="Emphasized" text="Richiama NI" press="onRichiamaNI" id="richiama" />
                <Button type="Emphasized" text="Revoca Conferma NI" press="onRevocaConfermaNI" id="revocaConferma" />
                <Button type="Emphasized" text="Registra Rilievo NI" press="onRegistraRilievo" id="RegistraRilievoNI" />
                <Button type="Emphasized" text="Valida NI" press="onValidaNI" id="Valida" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>