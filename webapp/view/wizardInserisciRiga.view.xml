<mvc:View height="100%"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m" 
    controllerName="project1.controller.wizardInserisciRiga">
    <NavContainer id="wizardNavContainer">
        <f:DynamicPage stickySubheaderProvider="InserisciRigaWizard" toggleHeaderOnTitleClick="false" class="sapUiNoContentPadding" showFooter="true">
            <f:header>
                <f:DynamicPageHeader id="h1" pinnable="false">
                    <core:Fragment fragmentName="project1.fragment.wizardPreimpostazione.headerStep2" type="XML" /> 
                    <core:Fragment fragmentName="project1.fragment.wizardPreimpostazione.headerStep3Rettifica" type="XML" />                 
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <Wizard id="InserisciRigaWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content" showNextButton="false" navigationChange="handleNavigationChange" renderMode="Page" width="auto">
                    <WizardStep id="SelezioneTitoliStep" title="Selezione Titoli" validated="true" app:stepId="1">
                        <form:SimpleForm editable="true">
                            <Panel height="100%">
                                <content>
                                    <l:Grid>
                                        <l:content>
                                            <VBox >
                                                <Label text="Esercizio di Gestione:" required="true" />
                                                <Input id="es_gestione" width="100%" value="{EntityModel>/Header/Gjahr}" enabled="false" /> 
                                                <layoutData>
                                                    <l:GridData span="XL6 L6 M6 S6" />
                                                </layoutData>
                                            </VBox>                                            
                                            <VBox>
                                                <Label text="Mese:" required="true" />
                                                <Input id="mese" value="{path: 'EntityModel>/Header/Zmese', formatter:'.formatter.getMonthName'}" enabled="false"/>                                                
                                                <layoutData>
                                                    <l:GridData span="XL3 L3 M6 S6" />
                                                </layoutData>
                                            </VBox>
                                            <VBox>
                                                <Label text="Sottotipologia primo livello:" />
                                                <Input value="{preimpostazioneModel>/tipologiaDescrizione}" 
                                                    id="tipologia" width="100%" showSuggestion="false" showValueHelp="true" showClearIcon="true"
                                                    valueHelpRequest="handleValueHelpZhfTipo" 
                                                    suggestionItems="{path: 'EntityModel>/ZhfTipo', sorter: { path: 'ZcodTipo' }}" 
                                                    app:fieldName="tipologia" 
                                                    app:filterTableField="tipologia"
                                                    valueHelpOnly="true"
                                                    liveChange="ZhfTipoOnDelete">
                                                    <suggestionItems>
                                                        <core:ListItem key="{EntityModel>ZcodTipo}" text="{EntityModel>Ztipo}"/>
                                                    </suggestionItems>
                                                </Input>
                                                <layoutData>
                                                    <l:GridData span="XL3 L3 M6 S12" linebreak="true"/>
                                                </layoutData>
                                            </VBox>
                                            <VBox>
                                                <Label text="Sottotipologia secondo livello:" />
                                                <ComboBox id="sottotipologia" width="100%" selectionChange="sottotipologiaSelectionChange"
                                                    items ="{
                                                    path: 'EntityModel>/ZhfSottotipo'
                                                    }">
                                                    <core:ListItem key="{EntityModel>ZhfSottotipo}" text="{EntityModel>Zsottotipo}" additionalText = "{EntityModel>ZcodSottotipo}"/>                                                    
                                                </ComboBox>
                                                <layoutData>
                                                    <l:GridData span="XL3 L3 M6 S12" />
                                                </layoutData>
                                            </VBox>
                                            <VBox>
                                                <Label text="Competenza/Residui:" />
                                                <ComboBox id="competenza" width="100%" items="{path: 'EntityModel>/ZcompResNISet', sorter: { path: 'Descrizione' }}" selectedKey="{preimpostazioneModel>/competenza}" >
                                                    <core:Item key="{EntityModel>ZcompRes}" text="{EntityModel>Descrizione}"/>
                                                </ComboBox>
                                                <layoutData>
                                                    <l:GridData span="XL3 L3 M6 S12" />
                                                </layoutData>
                                            </VBox> 

                                            <!-- <VBox>
                                                <Label text="Sottotipologia di primo livello:" />
                                                <Input value="" id="tipologia" width="100%" showSuggestion="false" showValueHelp="true" showClearIcon="true"
                                                    suggestionItems="{path: 'temp>/ZhfTipo', sorter: { path: 'ZcodTipo' }}" 
                                                    valueHelpOnly="true"
                                                    app:ZhfTipoKey="{temp>/ZhfTipoKey}"
                                                    valueHelpRequest="handleValueHelpZhfTipo" app:fieldName="tipologia" app:filterTableField="tipologia">
                                                    <suggestionItems>
                                                        <core:ListItem key="{temp>ZcodTipo}" text="{temp>Ztipo}"/>
                                                    </suggestionItems>
                                                </Input>
                                                <layoutData>
                                                    <l:GridData span="L3 M3 S3" />
                                                </layoutData>
                                            </VBox>
                                            <VBox>
                                                <Label text="Sottotipologia di secondo livello:" />
                                                <ComboBox id="sottotipologia" width="100%"
                                                    items ="{
                                                    path: 'temp>/ZhfSottotipo'
                                                    }">
                                                    <core:ListItem key="{temp>ZcodSottotipo}" text="{temp>Zsottotipo}" additionalText = "{temp>ZcodSottotipo}"/>                                                    
                                                </ComboBox>
                                                <layoutData>
                                                    <l:GridData span="L3 M3 S3" />
                                                </layoutData>
                                            </VBox>
                                            <VBox>
                                                <Label text="Competenza/Residui:" />
                                                <ComboBox id="competenza" width="100%" value="C">
                                                    <core:Item text="C"/>
                                                    <core:Item text="R"/>
                                                </ComboBox>
                                                <layoutData>
                                                    <l:GridData span="L3 M3 S3" />
                                              </layoutData>
                                            </VBox> -->
                                        </l:content>
                                    </l:Grid>
                                </content>
                            </Panel>
                        </form:SimpleForm>
                        <OverflowToolbar id="idSubmit" active="true">
                            <ToolbarSpacer />
                            <Button type="Emphasized" text="{i18n>submit}" press="onSearch" id="buttonSubmit" />
                        </OverflowToolbar>
                        <core:Fragment fragmentName="project1.fragment.tableWizard" type="XML" />
                    </WizardStep>
                    <WizardStep id="APFStep" validated="true" title="Associazione Posizione Finanziaria" activate="additionalInfoValidation" app:stepId="2">
                        <form:SimpleForm editable="true">
                            <form:content>
                                <Panel height="100%">
                                    <content>
                                        <l:Grid>
                                            <l:content>
                                                <VBox>
                                                    <Label text="Struttura Amministrativa Responsabile:" required="true"/>
                                                    <Input id="strAmmResp" value="{EntityModel>/Header/Fistl}" enabled="false"/>
                                                    <layoutData>
                                                        <l:GridData span="L12 M12 S12" />
                                                    </layoutData>
                                                </VBox>
                                                <VBox>
                                                    <Label text="Posizione Finanziaria:" required="true" />
                                                    <Input id="input_PF" value="{EntityModel>/Header/Fipex}" enabled="false"/>
                                                    <layoutData>
                                                        <l:GridData span="L4 M4 S4" />
                                                    </layoutData>
                                                </VBox>
                                                <VBox>
                                                    <Label text="Descrizione Capitolo:" />
                                                    <Input value="{preimpostazioneModel>/descrizioneCapitolo}" enabled="false"/>
                                                    <layoutData>
                                                        <l:GridData span="L4 M4 S4" />
                                                    </layoutData>
                                                </VBox>
                                                <VBox>
                                                    <Label text="Descrizione PG:" />
                                                    <Input value="{preimpostazioneModel>/descrizionePG}" enabled="false"/>
                                                    <layoutData>
                                                        <l:GridData span="L4 M4 S4" />
                                                    </layoutData>
                                                </VBox>
                                            </l:content>
                                        </l:Grid>
                                    </content>
                                </Panel>
                            </form:content>
                        </form:SimpleForm>
                    </WizardStep>
                    <WizardStep id="DatiNIStep" validated="true" activate="optionalStepActivation" title="Dati NI" app:stepId="3">
                        <!-- <core:Fragment fragmentName="project1.fragment.wizardStep3Table" type="XML" /> -->
                        <core:Fragment fragmentName="project1.fragment.wizardPreimpostazione.step3Rettifica" type="XML" />
                    </WizardStep>
                </Wizard>
            </f:content>
            <f:footer>
                <OverflowToolbar>
                    <Button text="Indietro" type="Emphasized" visible="{componentModel>/btnBackVisible}" press="onBackButton" />
                    <Button text="Avanti" type="Emphasized" visible="{componentModel>/btnNextVisible}" press="onNextButton" />
                    <ToolbarSpacer />
                    <Button type="Emphasized" text="Salva" visible="{componentModel>/btnPreimpostaNiVisible}" press="onPreimpNI" id="PreimpostaNI" />
                </OverflowToolbar>
            </f:footer>
        </f:DynamicPage>
    </NavContainer>
</mvc:View>